{
  "manifest_version": 3,
  "name": "ZAPatchex",
  "description": "pls work this time, onegaishimasu",
  "version": "1.0.0",
  "background": {
    "service_worker": "src/pages/background/index.ts",
    "type": "module"
  },
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "16": "Icons/icon-32.png",
      "32": "Icons/icon-32.png",
      "48": "Icons/icon-128.png",
      "128": "Icons/icon-128.png"
    }
  },
  "icons": {
    "16": "Icons/icon-32.png",
    "32": "Icons/icon-32.png",
    "48": "Icons/icon-128.png",
    "128": "Icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "http://zap/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "src/pages/content/index.tsx"
      ],
      "css": [
        "contentStyle.css"
      ]
    }
  ],
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": [
        "contentStyle.css",
        "Icons/OWASP_ZAP_Logo.png",
        "Icons/*",
        "Font/*"
      ],
      "matches": []
    }
  ]
}