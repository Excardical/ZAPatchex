{
  "manifest_version": 3,
  "name": "ZAPatchex",
  "description": "pls work this time, onegaishimasu",
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "action": {
    "default_title": "Open ZAPatchex Panel",
    "default_icon": {
      "32": "OWASP_ZAP_Logo.png"
    }
  },
  "icons": {
    "128": "OWASP_ZAP_Logo.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "sidePanel",
    "contextMenus"
  ],
  "side_panel": {
    "default_path": "src/pages/main/index.html"
  },
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "http://zap/*"
  ],
  "background": {
    "service_worker": "src/pages/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "src/pages/content/index.tsx"
      ],
      "css": [
        "contentStyle.css"
      ]
    }
  ],
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": [
        "contentStyle.css",
        "OWASP_ZAP_Logo.png",
        "src/pages/main/index.html"
      ],
      "matches": []
    }
  ]
}
